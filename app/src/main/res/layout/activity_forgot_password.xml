<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".ForgotPassword">

    <TextView
        android:id="@+id/forgot1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="FORGOT YOUR PASSWORD ?"
        android:textSize="25sp"
        android:fontFamily="sans-serif-light">
    </TextView>
    <TextView
        android:id="@+id/tvforget1"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESET PASSWORD"
        android:textColor="#000080"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_below="@id/forgot1"
        android:fontFamily="sans-serif-light"
        android:clickable="true">
    </TextView>
    <TextView
        android:id="@+id/lupaemail"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="sans-serif-light"
        android:textSize="25sp"
        android:layout_below="@id/tvforget1">
    </TextView>
    <EditText
        android:id="@+id/lupaemail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lupaemail">
    </EditText>
    <Button
        android:id="@+id/buttonsu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/lupaemail1"
        android:layout_marginTop="40dp"
        android:background="#000000"
        android:clickable="true"
        android:fontFamily="sans-serif-light"
        android:text="SEND"
        android:textColor="#FFFFFF"
        android:textSize="20dp">
    </Button>



</RelativeLayout>