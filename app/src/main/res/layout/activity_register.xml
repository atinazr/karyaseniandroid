<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context=".Register">
    <TextView
        android:id="@+id/regist1"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="SIGN UP"
        android:textSize="30sp"
        android:fontFamily="sans-serif-light">
    </TextView>
    <TextView
        android:id="@+id/emailx"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="sans-serif-light"
        android:textSize="25sp"
        android:layout_below="@id/regist1">
    </TextView>
    <EditText
        android:id="@+id/emailx1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailx">
    </EditText>
    <TextView
        android:id="@+id/password1"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="23sp"
        android:layout_below="@id/emailx1"
        android:fontFamily="sans-serif-light" >
    </TextView>
    <EditText
        android:id="@+id/password1x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password1"
        android:inputType="textPassword">
    </EditText>
    <Button
        android:id="@+id/buttonsu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/password1x"
        android:layout_marginTop="40dp"
        android:background="#000000"
        android:clickable="true"
        android:fontFamily="sans-serif-light"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="20dp">

    </Button>

</RelativeLayout>